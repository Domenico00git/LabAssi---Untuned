<div id="<%= dom_id post %>">
  <p>
    <% if post.user.image.attached? %>
      <%= image_tag(post.user.image, style: "display: inline-block; height: 40px; width: 40px; object-fit:cover; border-radius: 50%;")%>
    <% else %>
      <img src="/assets/default_picture.jpg" display="inline-block" height="40px" width="40px" object-fit="cover" border-radius="50%">
    <% end %>
    <strong><%= link_to post.user.username, user_path(post.user.username)%></strong>⠀-⠀
    <strong><%= post.label %></strong>
  </p>

  <p>
    <%= post.content %>
  </p>

  <p>
    <strong>create:</strong>
    <%= time_ago_in_words(post.created_at) %> 
    ⠀|⠀
    <strong>last update:</strong>
    <%= time_ago_in_words(post.updated_at) %>
  </p>
</div>
