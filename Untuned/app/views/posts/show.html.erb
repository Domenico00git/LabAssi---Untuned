      </div>
    </div>
    <hr>
    <h2 class="d-flex justify-content-center", style="color:#1DB954;">Comment Section:</h2>
    
    <%= render @post.comments%><br>

    <% if user_signed_in? %>
      <h4>Leave a new comment</h4>
      <%= render partial:'comments/form'%>
    <%end %>
