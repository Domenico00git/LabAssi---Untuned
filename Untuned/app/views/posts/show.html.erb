<body style="background-color:black">
  
  <p style="color: green"><%= notice %></p>
  <div class="container", style="color:lightgrey;">
    <div class="row">
      <div class="col md-2 d-flex justify-content-right">
        <div>
          <br>
          <%= link_to "< Back to posts", posts_path, class:"btn btn-outline-light"%>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <%= render @post %>
    </div>
    <div class="row">
      <div class="col-md-7 d-flex justify-content-start">
        <% if @post.user == current_user %>
          <%= link_to "Edit this post", edit_post_path(@post), class:"btn btn-sm btn-outline-light" %>
          <%= button_to "Delete post", @post, method: :delete, class:"btn btn-sm btn-outline-danger" %>
        <% end %>
      </div>
      <div class="col-md-2 d-flex justify-content-end">
        Comments:â €<%=@post.comments.count%>
