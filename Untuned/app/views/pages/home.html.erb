<body style="background-color:black">
    <img src="/assets/home.jpg" class="opacity-25" style="position: fixed; top: 10; left: 0; width: 100%; height: 100%; z-index: -11;">
    <div class="container"><br>
        <% if user_signed_in? %>
            <h1 style="color:#1DB954;">
                Hi <%= current_user.name%>,<br> welcome to Untuned<i class="bi bi-music-note"></i>
            </h1>
            <br><br><br>
            <%= link_to "My Profile", user_path(current_user.username), class:"btn w-100 btn-lg btn-outline-light"%>
            <%= link_to "Go To Forum", posts_path, class:"btn w-100 btn-lg btn-outline-light"%>

        <% else %>
            <h1 style="color:#1DB954;">
                Welcome to Untuned<i class="bi bi-music-note"></i>
            </h1>
            <br><br><br>
            <%= link_to "Sign in", signin_path, class:"btn w-100 btn-lg btn-outline-light"%>
            <br><br><br>
            <p style="color:lightgrey;">Don't have an account yet?</p>
            <%= link_to "Sign up here", signup_path, class:"btn w-100 btn-lg btn-outline-light"%>
            <%= link_to "Continue as guest", posts_path, class:"btn w-100 btn-lg btn-outline-light"%>
        <% end %>
    </div>
</body>