
<body style="background-color:black;">
    <div class="container text-center">
        <div class="row">
            <div class="col md-2 d-flex justify-content-right">
                <div class="text-center">
                    <br>
                    <%= link_to "< Back to my profile", user_path(current_user.username), class:"btn btn-outline-light"%>
                </div>
            </div>
            <div class="col md-8 d-flex justify-content-center">
                <div>
                    <br>
                    <h2 style="color:#1DB954">Followers</h2>
                </div>
            </div>
            <div class="col md-2">
            </div>
        </div>
        <br>
        <div class="container", style="color:lightgrey;">
            <% current_user.user_followers.each do |user| %>
                <h2 class="d-flex justify-content-center">
                    <% if (user.provider == 'google_oauth2' || user.provider == 'spotify') && user.avatar_url.present? %>
                        <%= image_tag(user.avatar_url, style: "display: inline-block; height: 50px; width: 50px; object-fit:cover; border-radius: 50%;")%>⠀
                    <%else%>
                        <% if user.image.attached? %>
                            <%= image_tag(user.image, style: "display: inline-block; height: 50px; width: 50px; object-fit:cover; border-radius: 50%;")%>
                        <% else %>
                            <img src="/assets/default_picture.jpg" display="inline-block" height="50px" width="50px" object-fit="cover" border-radius="50%">
                        <% end %>⠀
                    <% end %>
                    <%= link_to user.username, user_path(user.username), class:"btn w-50 btn-outline-light btn-lg"%>
                </h2>
            <% end %>
        </div>
    </div>
</body>