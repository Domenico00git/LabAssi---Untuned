
<body style="background-color:black;">
    <div class="text-center">
        <br>
        <h2 style="color:#1DB954">Followers</h2>
        <br>
    </div>

    <div class="container", style="color:lightgrey;">
        <% current_user.user_followers.each do |user| %>
            <h2 class="d-flex justify-content-center">
                <%= link_to user.username, user_path(user.username), class:"btn w-50 btn-outline-light"%>
            </h2>
        <% end %>
    </div>
    <br>
    <div class="text-center">
        <%= link_to "Back to my profile", user_path(current_user.username), class:"btn btn-outline-light"%>
    </div><br>
</body>