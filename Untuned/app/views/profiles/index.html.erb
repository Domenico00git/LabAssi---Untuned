<body style="background-color:black;">
    <div class="text-center", style="color:#1DB954">
        <br>
        <div class="d-flex justify-content-center">
            <h2>Search results:</h2>
        </div>
        <br>
        <% @users.each do |user| %>
            <h2 class="d-flex justify-content-center">
                <%= link_to user.username, user_path(user.username), class:"btn w-50 btn-outline-light"%>
            </h2>
        <% end %>
    </div>
    <div class="d-flex justify-content-center", style="color:lightgrey">
    <% if !@users[0].present?%>
        <h2> No Users found </h2>

    <% end %>
</body>