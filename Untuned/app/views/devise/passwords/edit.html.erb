<body style="background-color:#1DB954;">
  <h2 class="d-flex justify-content-center">Change your password</h2>

  <div class="d-flex justify-content-center">



    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control w-100" %>
      </div>
      <br>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control w-100" %>
      </div>
      <br>

      <div class="actions">
        <%= f.submit "Change my password" , class:"btn btn-outline-dark w-100"%>
      </div>

      <div><br>
        <%= render "devise/shared/links" %>
      </div>

    <% end %>



  </div>
</body>