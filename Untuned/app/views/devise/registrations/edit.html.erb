
<body style="background-color:#1DB954;">
  <div class="container">
    <br>
    <div class="row">
      <div class="col-md-2">
        <%= link_to "< Back to Profile", :back, class:"btn btn-outline-dark" %>
      </div>
      <div class="col-md-8 d-flex justify-content-center">
        <h2 class="d-flex justify-content-center">Edit Account</h2>
      </div>
    </div>
    <br>
    <div class="d-flex justify-content-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row d-flex justify-content-center">
          <div class="col">

            <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control w-100" %>
            </div>

            <div class="field">
              <%= f.label :last_name %><br />
              <%= f.text_field :lastname, autofocus: true, autocomplete: "last name", class:"form-control w-100" %>
            </div>

            <div class="field">
              <%= f.label :birth_date %><br />
              <%= f.date_field :birthdate, autofocus: true, autocomplete: "birth date", class:"form-control w-100" %>
            </div>

            <div class="field">
              <%= f.label :profile_picture %><br />
              <%= f.file_field :image, class:"form-control w-100" %>
            </div>
          </div>

          <div class="col">
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control w-100" %>
            </div>

            <div class="field">
              <%= f.label :New_password %><br />
              <%= f.password_field :password, placeholder:"Blank if you don't want to change", class:"form-control w-100" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, class:"form-control w-100" %>
            </div>

            <div class="field">
              <%= f.label :current_password %><br />
              <%= f.password_field :current_password, placeholder:"Need to confirm the changes", class:"form-control w-100" %>
            </div>
          </div>

          <div class="row">
            <div class="actions"><br>
              <%= f.submit "Update", class:"btn btn-outline-dark w-100" %>
            </div>  
          </div>
        </div>
        <br><br><br>
        <h3>Cancel my account</h3>
        <div>Unhappy?â €<%= link_to "Cancel my account", delete_user_path, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-outline-dark" %></div>
      <% end %>
    </div>
  </div>
</body>
    