<!DOCTYPE html>
<html>
  <head>
    <title>Untuned</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- Navigation Bar --> 
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#">Untuned</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to "Contacts", contact_path, class:"nav-link"%>
            </li>

            <li class="nav-item">
              <%= link_to "Home", root_path, class:"nav-link"%>
            </li>

            <li class="nav-item">
              <%= link_to "Forum", posts_path, class:"nav-link"%>
            </li>

            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "My Profile", user_path(current_user.username), class:"nav-link"%>
              </li>

              <% if current_user.admin?%>
                <li class="nav-item">
                  <%= link_to "Admin Area", admin_path, class:"nav-link"%>
                </li> 
              <% end %>

            <% end %>
          </ul>
        </div>

        <div>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= form_with url: profiles_index_path, method: :get do |form|%>
                <%= form.search_field :query, value: params[:query],
                placeholder: "Search user"%>
                <%= form.submit "Search", class:"btn btn-outline-success btn-sm" %>
              <% end %>
            </li>
          </ul>
        </div>

        <div>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Log out", signout_path, method: :delete, class:"nav-link"%>
              </li>

            <% else %>
              <li class="nav-item">
                <%= link_to "Sign up", signup_path, class:"nav-link"%>
              </li>

              <li class="nav-item">
                <%= link_to "Sign in", signin_path, class:"nav-link"%>
              </li>

            <% end %>
          </ul> 
        </div>

      </div>
    </nav>
  
    <%= yield %>

  </body>
</html>